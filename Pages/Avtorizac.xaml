<Page x:Class="TechnoServis.Pages.Avtorizac"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TechnoServis.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Avtorizac">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Авторизация" Margin="0,0,0,30" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Введите логин" Width="100"/>
                <TextBox x:Name="LogTB" Width="100"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Введите пароль" Width="100"/>
                <PasswordBox x:Name="PassTB" Width="100"/>
            </StackPanel>
            <Button x:Name="LogBTN" Content="Авторизироваться" Click="LogBTN_Click"/>
            <Button x:Name="GuestBTN" Content="Войти как гость" Click="GuestBTN_Click"/>
        </StackPanel>
    </Grid>
</Page>
